<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/bookmark_item">

    <LinearLayout
        android:id="@+id/bookMark_Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/saved"
            />

        <com.folioreader.ui.view.UnderlinedTextView
            android:id="@+id/utv_bookmark_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="1"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/bookMark_Row"
        android:layout_width="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bookmark_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 sep 2016"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_bookmark_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete" />
    </RelativeLayout>
</FrameLayout>